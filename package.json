{
  "name": "epigraphy",
  "version": "1.0.1",
  "description": "Web Interface to the Corpus of Russian Inscriptions",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/yaskevich/epigraphy.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "sync": "node scripts/download-sheets.js && node scripts/import-sheets.js",
    "css-build": "node-sass --omit-source-map-url cir.sass public/bulma.custom.css --output-style compressed",
    "css-watch": "npm run css-build -- --watch"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "cache/*",
      "public/*"
    ],
    "delay": "2500",
    "events": {
      "start": "env TZ=Europe/Moscow date"
    }
  },
  "author": "Alyaxey Yaskevich",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@popperjs/core": "^2.5.3",
    "archiver": "^4.0.2",
    "async-csv": "^2.1.3",
    "axios": "^0.19.0",
    "better-sqlite3": "^6.0.1",
    "bowser": "^2.11.0",
    "bulma-extensions": "^6.2.7",
    "config": "^3.3.2",
    "csvtojson": "^2.0.10",
    "devbridge-autocomplete": "^1.4.11",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "googleapis": "^49.0.0",
    "inline-source": "^7.2.0",
    "jquery": "^3.5.1",
    "materialize-css": "^1.0.0-rc.2",
    "mustache": "^4.0.1",
    "nouislider": "^14.6.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "persistent-cache": "^1.1.1",
    "pino": "^5.17.0",
    "pino-multi-stream": "^5.1.1",
    "pino-pretty": "^3.6.1",
    "route-async": "^1.0.7",
    "satelize-lts": "^1.0.0",
    "showdown": "^1.9.1",
    "tippy.js": "^6.2.6",
    "vanilla-lazyload": "^15.2.0",
    "whoiser": "^1.9.0"
  },
  "devDependencies": {
    "bulma": "^0.8.2",
    "node-sass": "^4.14.1"
  }
}
